{
  "expo": {
    "name": "Travel Planner",
    "slug": "travel-planner",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "userInterfaceStyle": "light",
    "splash": {
      "image": "./assets/splash.png",
      "resizeMode": "contain",
      "backgroundColor": "#ffffff"
    },
    "assetBundlePatterns": [
      "**/*"
    ],
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.travelplanner.app",
      "infoPlist": {
        "UIAppFonts": [
          "AntDesign.ttf",
          "Entypo.ttf",
          "EvilIcons.ttf",
          "Feather.ttf",
          "FontAwesome.ttf",
          "FontAwesome5_Brands.ttf",
          "FontAwesome5_Regular.ttf",
          "FontAwesome5_Solid.ttf",
          "FontAwesome6_Brands.ttf",
          "FontAwesome6_Regular.ttf",
          "FontAwesome6_Solid.ttf",
          "Foundation.ttf",
          "Ionicons.ttf",
          "MaterialIcons.ttf",
          "MaterialCommunityIcons.ttf",
          "SimpleLineIcons.ttf",
          "Octicons.ttf",
          "Zocial.ttf",
          "Fontisto.ttf"
        ],
        "NSLocationWhenInUseUsageDescription": "This app needs access to location to show places on the map."
      },
      "config": {
        "googleSignIn": {
          "reservedClientId": "GOOGLE_IOS_CLIENT_ID_PLACEHOLDER"
        }
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#FFFFFF"
      },
      "package": "com.travelplanner.app",
      "permissions": [
        "ACCESS_FINE_LOCATION",
        "ACCESS_COARSE_LOCATION"
      ],
      "config": {
        "googleMaps": {
          "apiKey": "GOOGLE_MAPS_API_KEY_PLACEHOLDER"
        },
        "googleSignIn": {
          "apiKey": "GOOGLE_PLACES_API_KEY_PLACEHOLDER",
          "certificateHash": "YOUR_CERTIFICATE_HASH"
        }
      }
    },
    "web": {
      "favicon": "./assets/favicon.png"
    },
    "plugins": [
      "expo-font",
      [
        "expo-google-sign-in",
        {
          "iosUrlScheme": "com.googleusercontent.apps.847080271209-tugpe7mjovatdv0gp9dkdcdtdhinmpd3"
        }
      ],
      [
        "expo-location",
        {
          "locationAlwaysAndWhenInUsePermission": "Allow Travel Planner to use your location to show nearby places."
        }
      ]
    ],
    "extra": {
      "eas": {
        "projectId": "your-project-id"
      }
    }
  }
}